@*@using Library.Models
    @model  Publisher*@

@*@using Library.ViewModel
    @model PublisherViewModel*@
<h3>Add Book</h3>
@using (Html.BeginForm("SaveBook", "Saviour"))
{
    <input type="text" name="_bookName" />
    <br />
    <textarea name="_description"></textarea>
    <br />
    <select name="_publisher">
        @{
            foreach (var company in Model.AllPublishers)
            {
                <option>
                    @company.PublisherName
                </option>
            }

        }
    </select>
    <br />
    <input type="text" name="_price" />
    <br />
    <input type="text" name="_release" />
    <br />
    <input type="submit" />
}



