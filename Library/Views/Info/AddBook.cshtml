@*@using Library.Models
    @model  Publisher*@

@*@using Library.ViewModel
    @model PublisherViewModel*@
<div class="add_book">
    @using (Html.BeginForm("SaveBook", "Saviour"))
    {

        <input type="text" name="_bookName" class="info" />
        <br />
        <textarea name="_description" class="info"></textarea>
        <br />
        <select name="_publisher" class="info">
            @{
                foreach (var company in Model.AllPublishers)
                {
                    <option>
                        @company.PublisherName
                    </option>
                }

            }
        </select>
        <br />
        <input type="text" name="_price" class="info" />
        <br />
        <input type="text" name="_release" class="info" />
        <br />
        <input type="submit" class="submit_btn" />

    }

</div>
    

